<Page x:Class="AccountingForTouristTrips.View.TourView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingForTouristTrips.View"
        mc:Ignorable="d"
        Title="TourView" Height="450" Width="800">
    <StackPanel Background="{StaticResource LightGrayBg}">
        <StackPanel Orientation="Horizontal" Background="{StaticResource LightGrayBg}">
            <Button x:Name="btnAdd" Margin="10,10,5,10" Content="Добавить" Command="{Binding Add}"/>
            <Button x:Name="btnEdit" Margin="10,10,5,10" Content="Редактировать" Command="{Binding Edit}"/>
            <Button x:Name="btnDelete" Margin="10,10,5,10" Content="Удалить" Command="{Binding Delete}"/>
        </StackPanel>
        <Label Margin="5" HorizontalAlignment="Center">Список туров</Label>
        <ListView x:Name="lvCountry" ItemsSource="{Binding ListTour}" SelectedItem="{Binding SelectedTour}" Background="#FFD3CDCD" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Код" Width="50" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Страна" DisplayMemberBinding="{Binding Country.Name}"/>
                        <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}"/>
                        <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding StartDate}"/>
                        <GridViewColumn Header="Конец" DisplayMemberBinding="{Binding EndDate}"/>
                        <GridViewColumn Header="Количесво мест" DisplayMemberBinding="{Binding MaxSeats}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>
