<Window x:Class="AccountingForTouristTrips.View.NewTourView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingForTouristTrips.View"
        mc:Ignorable="d"
        Title="New tour" Height="450" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Id" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding Id}" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="40"/>

        <TextBlock Text="Name"  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <TextBlock Text="Country Id" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding CountryId}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <TextBlock Text="Price" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding Price}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <TextBlock Text="Start Date" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding StartDate}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <TextBlock Text="End Date" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding EndDate}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <TextBlock Text="Max Seats" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBox Text="{Binding MaxSeats}" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Width="100"/>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveBtn" Content="Save" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
            <Button x:Name="CancelBtn" Content="Cancel" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="10"/>
        </StackPanel>

    </Grid>
</Window>
