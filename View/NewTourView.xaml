<Window x:Class="AccountingForTouristTrips.View.NewTourView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingForTouristTrips.View"
        mc:Ignorable="d"
        Title="New tour" Height="520" Width="450">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Id" HorizontalAlignment="Right" VerticalAlignment="Center" Height="18"/>
        <TextBox Text="{Binding Id}" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,0,0" Width="40"/>

        <TextBlock Text="Name"  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"  Height="19"/>
        <TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <TextBlock Text="Country" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="18"/>
        <ComboBox x:Name="cbCountry" SelectedItem="{Binding Country}" SelectedValue="{Binding CountryId}" SelectedValuePath="Id" DisplayMemberPath="Name" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <TextBlock Text="Price" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Height="19"/>
        <TextBox Text="{Binding Price}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <TextBlock Text="Start Date" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Height="19"/>
        <DatePicker Text="{Binding StartDate}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <TextBlock Text="End Date" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Height="19"/>
        <DatePicker Text="{Binding EndDate}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <TextBlock Text="Max Seats" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center" Height="18"/>
        <TextBox Text="{Binding MaxSeats}" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Width="100" Height="45"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1">
            <Button x:Name="SaveBtn" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="SaveBtn_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="10" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
